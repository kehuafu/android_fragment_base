<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="KelinPhotoSelectorBottomAnimDialog" parent="@android:style/Theme.Dialog">
        <item name="windowMinWidthMajor">100%</item>
        <item name="windowMinWidthMinor">100%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/KelinPhotoSelectorDialogBottomAnim</item>
    </style>

    <style name="KelinPhotoSelectorDialogBottomAnim">
        <item name="android:windowEnterAnimation">@anim/anim_kelin_photo_selector_translate_y100_y0_300</item>
        <item name="android:windowExitAnimation">@anim/anim_kelin_photo_selector_translate_y0_y100_300</item>
    </style>

    <style name="KelinPhotoSelectorCenterAnimDialog" parent="@android:style/Theme.Dialog">
        <item name="windowMinWidthMajor">30%</item>
        <item name="windowMinWidthMinor">30%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/KelinPhotoSelectorDialogCenterAnim</item>
    </style>

    <style name="KelinPhotoSelectorDialogCenterAnim">
        <item name="android:windowEnterAnimation">@anim/anim_alpha_in_100</item>
        <item name="android:windowExitAnimation">@anim/anim_alpha_out_100</item>
    </style>
</resources>